<resources>

    <!-- Base Themes -->
    <style name="Theme.iboalali.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/md_purple_500</item>
        <item name="colorPrimaryDark">@color/md_purple_700</item>
        <item name="colorAccent">@color/md_purple_200</item>
        <item name="colorSurface">@color/md_purple_50</item>
        <item name="colorPrimarySurface">@color/md_purple_100</item>
        <item name="colorOnSurface">@color/md_purple_dark</item>
        <item name="colorOnPrimarySurface">@color/md_purple_300</item>
    </style>

    <style name="Theme.iboalali.Base.Other" parent="Theme.iboalali.Base">
        <item name="colorSurface">@color/md_purple_200</item>
        <item name="android:textColorLink">@color/md_purple_900</item>
    </style>

    <!-- App Themes -->
    <style name="Theme.iboalali.Main" parent="Theme.iboalali.Base" />

    <style name="Theme.iboalali.SplashScreen" parent="Theme.iboalali.Main" />

    <style name="Theme.iboalali.Other" parent="Theme.iboalali.Base.Other" />

    <!-- Shape Overlays -->
    <style name="ShapeAppearanceOverlay.iboalali.Rectangle.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.iboalali.Title.Expanded.Noto" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextAppearance.iboalali.Title.Collapsed.Noto" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
