<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.iboalali.SplashScreen" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/md_purple_50</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_anim</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.iboalali.Main</item>
    </style>

    <style name="Theme.iboalali.Main" parent="Theme.iboalali.Base">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.iboalali.Base.Other" parent="Theme.iboalali.Main">
        <item name="colorSurface">@color/md_purple_200</item>
        <item name="android:textColorLink">@color/md_purple_900</item>
    </style>

    <style name="Theme.iboalali.Other" parent="Theme.iboalali.Base.Other" />

</resources>